<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/moduleItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center">

    <Button
        android:id="@+id/module_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7ssp"
        android:layout_marginRight="@dimen/_4ssp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded"
        android:backgroundTint="#FFFFFF"
        android:letterSpacing="-0.05"
        android:paddingHorizontal="60dp"
        android:paddingVertical="30dp"
        android:text="Module 1 Name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/module_check"
        app:layout_constraintTop_toBottomOf="@id/item_top_guideline"
        app:layout_constraintBottom_toTopOf="@id/item_bottom_guideline"
        />

    <ImageView
        android:id="@+id/module_check"
        android:layout_width="@dimen/_50ssp"
        android:layout_height="@dimen/_50ssp"
        android:layout_marginRight="@dimen/_2ssp"
        android:adjustViewBounds="true"
        android:contentDescription="Checkbox indicator of completed module"
        android:src="@drawable/checkmark_empty"
        app:layout_constraintTop_toTopOf="@id/module_button"
        app:layout_constraintBottom_toBottomOf="@id/module_button"
        app:layout_constraintLeft_toRightOf="@id/module_button"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />
</androidx.constraintlayout.widget.ConstraintLayout>