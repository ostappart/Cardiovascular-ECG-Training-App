<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dictItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginHorizontal="@dimen/_18ssp"
    android:gravity="center">

    <TextView
        android:id="@+id/dictItem_word"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20ssp"
        android:background="@drawable/rounded_40dp_border"
        android:backgroundTint="@color/eggshell_white"
        android:paddingBottom="@dimen/_5ssp"
        android:text="Lorem ipsum"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintStart_toStartOf="@id/item_top_guideline"
        app:layout_constraintTop_toTopOf="@id/item_top_guideline"
        />

    <TextView
        android:id="@+id/dictItem_def"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_40dp_border"
        android:backgroundTint="@color/eggshell_white"
        android:letterSpacing="-0.05"
        android:paddingVertical="@dimen/_10ssp"
        android:text="dolor sit amet, consectuetur adipiscing elit, sed"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintStart_toStartOf="@id/dictItem_word"
        app:layout_constraintTop_toBottomOf="@id/dictItem_word"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.123" />

</androidx.constraintlayout.widget.ConstraintLayout>